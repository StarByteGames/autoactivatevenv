{
  "name": "autoactivatevenv",
  "displayName": "AutoActivateVenv",
  "description": "Automatically activates virtual environments (venv) when a workspace or folder is opened.",
  "version": "1.0.0",
  "publisher": "starcrusher2025",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:venv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "AutoActivateVenv",
      "properties": {
        "autoactivatevenv.venvPath": {
          "type": "string",
          "default": ".venv",
          "description": "Path to the Python virtual environment folder. E.g., '.venv' or 'env'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
